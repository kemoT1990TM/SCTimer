<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<DialogPane fx:controller="com.tkartas.speedcubingtimer.ShowScramblesController"
            xmlns:fx="http://javafx.com/fxml">
    <!--<headerText>-->
        <!--Generated by SCTimer-->
    <!--</headerText>-->
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Generate scramble list for" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ChoiceBox fx:id="scrambleChoice" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#scrambleChoiceAction">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Best single time"/>
                        <String fx:value="Best average of 5"/>
                        <String fx:value="Best average of 12"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
            <TextArea fx:id="scramblesArea" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"
                      wrapText="true"/>
        </GridPane>
    </content>
</DialogPane>
